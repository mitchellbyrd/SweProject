<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="false">
<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="639dp">

    <TextView
        android:id="@+id/fragment_preferences_userPreferencesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#010101"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/fragment_preferences_carbsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/fragment_preferences_proteinInput"
        android:layout_toStartOf="@+id/textView4"
        android:inputType="number"/>

    <EditText
        android:id="@+id/fragment_preferences_proteinInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/fragment_preferences_caloriesInput"
        android:layout_alignStart="@+id/fragment_preferences_caloriesInput"
        android:inputType="number"/>

    <EditText
        android:id="@+id/fragment_preferences_caloriesInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:layout_below="@+id/fragment_preferences_userPreferencesLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="g"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#020202"
        android:layout_alignBottom="@+id/fragment_preferences_carbsInput"
        android:layout_toEndOf="@+id/fragment_preferences_carbsInput" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="g"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#020202"
        android:layout_above="@+id/fragment_preferences_carbsInput"
        android:layout_toEndOf="@+id/fragment_preferences_proteinInput" />

    <EditText
        android:id="@+id/fragment_preferences_fatsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:layout_marginTop="58dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="g"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#020202"
        android:layout_alignBottom="@+id/fragment_preferences_fatsInput"
        android:layout_toEndOf="@+id/fragment_preferences_fatsInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/fragment_preferences_submitButton"
        android:background="#7afe5f"
        android:clickable="false"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/fragment_preferences_title"
        android:layout_toStartOf="@+id/fragment_preferences_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daily Preferences"
        android:id="@+id/fragment_preferences_title"
        android:layout_below="@+id/fragment_preferences_userPreferencesLabel"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/fragment_preferences_cancelBtn"
        android:background="#fe4b4b"
        android:layout_alignTop="@+id/fragment_preferences_submitButton"
        android:layout_toRightOf="@+id/fragment_preferences_title"
        android:layout_toEndOf="@+id/fragment_preferences_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calories"
        android:id="@+id/textView"
        android:layout_below="@+id/fragment_preferences_caloriesInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Protein"
        android:id="@+id/textView7"
        android:layout_below="@+id/fragment_preferences_proteinInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Carbohydrates"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fat"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

</LinearLayout>

</ScrollView>