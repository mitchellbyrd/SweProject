<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello Username"
        android:id="@+id/fragment_calendar_greeting"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Today&apos;s Calories"
        android:id="@+id/fragment_calendar_heading"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fragment_calendar_greeting"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_calendar_progress"
        android:progress="40"
        android:indeterminate="false"
        android:layout_below="@+id/fragment_calendar_calories"
        android:layout_alignStart="@+id/fragment_calendar_calendar"
        android:layout_alignParentEnd="true"/>

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_calendar_calendar"
        android:layout_below="@+id/fragment_calendar_progress"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1700/2000"
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_calendar_calories"
        android:layout_below="@+id/fragment_calendar_heading"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
